{ 
  "extends": "stylelint-config-standard",
  "configBasedir": "node_modules", 
  "plugins": [
    "stylelint-scss",
    "stylelint-order"
  ],
  "rules": {
    "declaration-empty-line-before": null,
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "at-rule-no-unknown": null,
    "scss/no-global-function-names": null,
    "scss/at-rule-no-unknown": true
  }
}
